<% include home %>
<head>
	<link href="/css/home.css" type="text/css" rel="stylesheet" />
	</head>
	
<div class="container">
			<div class="row">
					<div class="col-md-2"></div>
					<div class="col-md-8">
						<h2>Attendee Registration Form</h2>
					</div>
					<div class="col-md-2"></div>
                </div>
                <div class="row">
					<div class="col-md-2"></div>
					<div class="col-md-8">
						<p>Please fill the below details</p>
					</div>
					<div class="col-md-2"></div>
				</div>
	<form action="/attendee" method="POST" id="myForm">
			<div class="row"> 
				<div class="col-md-4"></div>
				<div class="col-md-4">
				<div class="form-group">
					<label for="name">Name</label>
					<input type="text" class="form-control" id="name" name="name" required>
				</div>
				</div>
				<div class="col-md-4"></div>
			 </div>
			 <div class="row">
				<div class="col-md-4"></div>
				<div class="col-md-4">
				<div class="form-group">
					<label for="email">Email</label>
					<input type="email" class="form-control" id="email" name="email" required></div></div>
				<div class="col-md-4"></div>
			 </div>
			 <div class="row">
				<div class="col-md-4"></div>
				<div class="col-md-4">
				<div class="form-group">
					<label for="contact">Contact Number</label>
					<input type="text" class="form-control" id="contact" name="contact" required></div></div>
					<div class="col-md-4"></div>
			</div>
			<div class="row">
				<div class="col-md-4"></div>
				<div class="col-md-4">
				<div class="form-group">
					<label for="school">School</label>
					<input type="school" class="form-control" id="school" name="school"></div></div>
					<div class="col-md-4"></div>
			</div>
			<div class="row">
				<div class="col-md-4"></div>
				<div class="col-md-4">
					<div class="form-group">
						<label for="topic">Program</label>
						<select multiple name="program" id="program" class="form-control">
							<% for(let i = 0 ; i < list.length; i++) { %>
								<option value= '<%= list[i].add %>'><%= list[i].add %></option>							
								<% } %> 
						  </select>
						</div></div>
				<div class="col-md-4"></div>
			</div>
			<div class="row">
				<div class="col-md-4"></div>
				<div class="col-md-4">
					<div class="form-group">
						<label for="Food">Food(Specify Veg or Non-Veg)</label><br>
						<input type="radio" name="food" value="Veg">Veg<br>
						<input type="radio" name="food" value="Non-Veg">Non-Veg<br>
		<div class="col-md-4"></div>
		</div>
		</div>
		</div>
		<div class="row">
				<div class="col-md-4"></div>
				<div class="col-md-4">
					<div class="form-group">
						<label for="restrict">Do you have any dietary restrictions for the provided breakfast or lunch?</label>
						<input type="restrict" class="form-control" id="restrict" name="restrict"></div></div>
		<div class="col-md-4"></div>
		</div>
			<div class="row">
			<div class="col-md-4"></div>
			<div class="col-md-4">
			<button type="submit" class="btn btn-primary">Submit</button></div>
			<div class="col-md-4"></div>
		</form>
		