<%include adminheader%>

<div class="container"><br>
    <div class="col-md-4"></div>
    <div class="col-md-8">
           

        <form method="POST" action="/amount">
            <div class="form-group">
                <label for="add">Type:</label>
                <input type="text" name="type" /></div>
            <div class="form-group">
                <label for="add">Amount:</label>
                <input type="text" name="amount" /></div>
    </div><br><br>

    <div align="center" class="form-group">

        <input type="submit" name="submit" class="btn btn-primary" /><br>
    </div>

        </form>

        <link href="/css/AdminStyling.css" type="text/css" rel="stylesheet" />
        <h3 style="text-align:center">Update Prices</h3>

        <table class="w3-table-all w3-card-4" id="add" align="center">
            <thead>
                <tr>
                    <th> Type  </th>
                    <th> Amount </th>
                    <th> Delete </th>

                </tr>
            </thead>

            <% for(let i = 0 ; i < list.length; i++) { %>
                <tr>
                    <td>
                        <%= list[i].type %>
                    </td>
                    <td>
                        <%= list[i].amount %>
                    </td>

                    <form action="/deletename" method="POST">
                        <input type="text" name="presId" value="<%= list[i]._id %>" hidden>
                        <td><button type="submit" name="delete" class="btn btn-danger">Delete</button></td>
                    </form>

                </tr>
                <% } %>


    </div>

    </table>